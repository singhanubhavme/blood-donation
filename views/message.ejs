<%- include("partials/header.ejs") -%>
<style>
    .alert {
        margin: auto !important;
        margin-top: 2em !important;
    }
</style>
<title>Message</title>
</head>

<body>
    <%- include("partials/navbar.ejs") -%>

    <% if(path_url === '/emergency') { %>
    <div class="alert alert-success w-75 d-flex flex-column animate__animated animate__pulse" role="alert">
        <h4 class="alert-heading">Success!</h4>
        <hr>
        <p class="mb-0">Email is Sent to Admin and Other Donors with required Blood Group.</p>
    </div>
    <% } else if(path_url === '/requestblood') { %>
    <div class="alert alert-success w-75 d-flex flex-column animate__animated animate__pulse" role="alert">
        <h4 class="alert-heading">Success!</h4>
        <hr>
        <p class="mb-0">Request Sent, Admin will Contact Soon on You Email.</p>
    </div>
    <% } else if(path_url === '/donor') { %>
    <div class="alert alert-success w-75 d-flex flex-column animate__animated animate__pulse" role="alert">
        <h4 class="alert-heading">Success!</h4>
        <hr>
        <p class="mb-0">You can go to nearest camp to donate the blood.</p>
    </div>
    <% } else if(path_url === '/admin') { %>
    <div class="alert alert-danger w-75 d-flex flex-column animate__animated animate__pulse" role="alert">
        <h4 class="alert-heading">Failed!</h4>
        <hr>
        <p class="mb-0">You have to be a admin to access this page.</p>
    </div>
    <% } else if(path_url === '/admin/accept') { %>
    <div class="alert alert-danger w-75 d-flex flex-column animate__animated animate__pulse" role="alert">
        <h4 class="alert-heading">Failed!</h4>
        <hr>
        <p class="mb-0">Blood Unavailable.</p>
    </div>
    <% } else if(path_url === '/donor') { %>
    <div class="alert alert-success w-75 d-flex flex-column animate__animated animate__pulse" role="alert">
        <h4 class="alert-heading">Success!</h4>
        <hr>
        <p class="mb-0">You can go to nearest camp to donate the blood.</p>
    </div>
    <% } else if(path_url === '/make-admin') { %>
    <% if(userPresent === true) { %>
    <div class="alert alert-success w-75 d-flex flex-column animate__animated animate__pulse" role="alert">
        <h4 class="alert-heading">Success!</h4>
        <hr>
        <p class="mb-0">Entered User is Now Admin.</p>
    </div>
    <% } else { %>
    <div class="alert alert-danger w-75 d-flex flex-column animate__animated animate__pulse" role="alert">
        <h4 class="alert-heading">Failed!</h4>
        <hr>
        <p class="mb-0">Entered User not Found.</p>
    </div>
    <% } %>
    <% } else if(url === '/register') { %>
    <div class="alert alert-danger w-75 d-flex flex-column animate__animated animate__pulse" role="alert">
        <h4 class="alert-heading">Failed!</h4>
        <hr>
        <p class="mb-0">User Already Registered.</p>
    </div>
    <% } %>


</body>
<%- include("partials/footer.ejs") -%>